<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record model="ir.ui.view" id="base.view_partner_form">
        <field name="priority">10</field>
     </record>

    <record model="ir.ui.view" id="base.view_res_partner_filter">
        <field name="priority">10</field>
     </record>

    <record model="ir.ui.view" id="base.view_partner_tree">
        <field name="priority">10</field>
     </record>

    <record model="ir.ui.view" id="search_partner">
        <field name="name">Syndic Partner search view</field>
        <field name="model">res.partner</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="street"/>
                <field name="city_id"/>
                <field name="zip"/>
                <field name="country_id"/>
                <field name="phone"/>
                <field name="email"/>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="tree_partner">
        <field name="name">Syndic Partner tree view</field>
        <field name="model">res.partner</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Nom"/>
                <field name="street" string="Adresse"/>
                <field name="city_id" string="Ville"/>
                <field name="zip" string="Code Postal"/>
                <field name="country_id" string="Pays"/>
                <field name="phone" string="Téléphone"/>
                <field name="email"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="form_partner">
        <field name="name">Syndic Partner form view</field>
        <field name="model">res.partner</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form>
                <!--<field name="is_old" invisible="1"/>-->
                <group colspan="4" col="4">
                    <field name="name" colspan="2"/>
                    <field name="title" colspan="2" string="Titre"/>
                </group>
                <notebook colspan="4">
                    <page string="Contact" name="contact">
                        <group>
                            <group string="Adresse">
                                <field name="street"/>
                                <field name="city_id"/>
                                <field name="zip"/>
                                <field name="country_id" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" />
                            </group>

                            <group string="Contact Electronique">
                                <field name="phone" string="Téléphone"/>
                                <field name="fax"/>
                                <field name="mobile"/>
                                <field name="email"/>
                            </group>
                        </group>

                        <group string="Autres contacts">
								<field name="child_ids" colspan="4" nolabel="1">
									<tree string="Autres contacts" editable="top">
										<field name="name"/>
										<field name="title"/>
										<field name="street"/>
										<field name="zip"/>
										<field name="city_id"/>
										<field name="country_id" string="Pays"/>
										<field name="phone" string="Téléphone"/>
										<field name="fax" string="Fax"/>
										<field name="mobile" string="GSM"/>
										<field name="email"/>
										<field name="is_letter"/>
									</tree>
								</field>
							</group>
                    </page>
                    <page string="Information Technique">
                        <group>
                            <field name="user_ids"/>
                        </group>
                    </page>
                    <!--<page string="Ancien Lot" name="old_lot" attrs="{'invisible': [('is_old', '=', False)]}">-->
                        <!--<field name="old_lot_ids" readonly="1">-->
                            <!--<tree>-->
                                <!--<field name="name"/>-->
                                <!--<field name="building_id"/>-->
                            <!--</tree>-->
                        <!--</field>-->
                    <!--</page>-->
                </notebook>
            </form>
        </field>
    </record>


    <record model="ir.actions.act_window" id="syndic_action_partner">
        <field name="name">Autres contacts</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="domain">[]</field>
        <!--<field name="domain">[('is_locataire', '=', False), ('is_proprietaire', '=', False), ('supplier', '=', False), ('name', 'not in', ['Administrator', 'My Company'])]</field>-->
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>


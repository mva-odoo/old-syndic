<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="tree_rapport_reunion">
			<field name="name">Rapport Reunion tree view</field>
			<field name="model">letter.reunion</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Reunion">
					<field name="name" />
					<field name="immeuble_id" />
					<field name="type_id" />
					<field name="create_date" />
                </tree>
			</field>
		</record>


		<!--form -->
		<record model="ir.ui.view" id="form_rapport_reunion">
			<field name="name">Rapport Reunion form view</field>
			<field name="model">letter.reunion</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Reunion">
					<sheet string="Rapport reunion" layout="auto">
						<group>
							<field name="name"/>
                            <field name="date"/>
                            <field name="date_fr" />
							<field name="immeuble_id"/>
							<field name="type_id" />
							<field name="owner_ids" widget="many2many_tags" options="{'no_create':True}"/>
							<field name="percentage_present" widget="progressbar"/>
		                </group>
						<group string="Descriptif">
							<field name="descriptif" nolabel="1"/>
						</group>
						<group string="Points">
							<field name="point_ids" nolabel="1"/>
						</group>
		            </sheet>
                </form>
			</field>
		</record>

		<record model="ir.ui.view" id="form_rapport_reunion_point">
			<field name="name">Rapport Reunion form point view</field>
			<field name="model">reunion.point</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form>
					 <sheet>
						<group>
							<field name="name" />
							<field name="sequence" />
		                </group>
						<notebook>
							<page string='Description'>
								<field name="descriptif" />
							</page>
							<page string="Vote">
								<group>
									<field name="quotity_id"/>
									<field name="acceptation_percentage"/>
								</group>
								<field name="vote_ids">
									<tree editable='top' create="0">
										<field name="owner_id" readonly="1"/>
										<field name="lot_ids" widget="many2many_tags" readonly="1"/>
										<field name="value" readonly="1"/>
										<field name="quotity_percentage" readonly="1"/>
										<field name="vote"/>
									</tree>
								</field>
							</page>
						</notebook>
		            </sheet>
                </form>
			</field>
		</record>

		<!--action -->

		<record model="ir.actions.act_window" id="rapport_reunion">
			<field name="name">Réunion</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">letter.reunion</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		<record model="ir.actions.act_window" id="rapport_type_model">
			<field name="name">Type de rapport</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">reunion.type</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		<!--menu -->
		<menuitem name="Type de rapport" id="menu_rapport_type" parent="syndic_letter.menu_configuration_letter" action="rapport_type_model" />
		<menuitem name="Rapports de réunions" id="menu_rapport_reunion" parent="syndic_letter.menu_sub_letter" action="rapport_reunion" sequence="4"/>

	</data>
</openerp>
